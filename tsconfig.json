{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "declarationMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node"
  },
  "include": ["packages/**/*", "declarations.d.ts"],
  "exclude": ["**/node_modules", "**/dist", "*.config.*", "*.json"]
}
