{
  "packages": ["packages/*"],
  "version": "1.3.0",
  "useWorkspace": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "https://npm.pkg.github.com"
    },
    "version": {
      "conventionalCommits": true,
      "allowBranch": [
        "master",
        "release/*",
        "develop",
        "hotfix/*",
        "feature/*",
        "bugfix/*"
      ],
      "message": "chore(release): publish %s"
    }
  }
}
